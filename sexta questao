programa {
  funcao inicio() {
    real nota1, nota2, media

    escreva("Informe a primeira nota: ")
    leia(nota1)

    escreva("Informe a segunda nota: ")
    leia(nota2)

    media = (nota1 + nota2) / 2
    escreva("Sua média é: ", media)

    Se (media >= 6)
    escreva("Parabens")
      
    Se (media >= 4)
    escreva("Está aprovado!")

    Se (media < 4)
    escreva("Está reprovado")


    
  }
}
