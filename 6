programa {
  funcao inicio() {
    
    real nota1, nota2, media
    
    escreva("Dgite a primeira nota: ")
    leia(nota1)

    escreva("Digite a segunda nota: ")
    leia(nota2)

    media = (nota1 + nota2) / 2
    escreva("A média do aluno é: ", media) 

   se(media >= 6)
   escreva("\nParabéns!")
   
   se(media >= 4)
   escreva("\nAprovado!")

   se(media < 4)
   escreva("\nReprovado")







    



  }
}
