programa {
  funcao inicio() {
    cadeia cor


    escreva("Digite a cor desejada: ")
    leia(cor)

    escolha (cor){
     caso "verde":
     escreva("O preço do CD é R$ 10.00")
     pare

     caso "azul":
     escreva("O preço do CD é R$ 20.00")
     pare

     caso "amarelo":
     escreva("O preço do CD é R$ 30.00")
     pare

     caso "vermelho":
     escreva("O preço do CD é R$ 40.00")
     pare
  
    }
  }
}
